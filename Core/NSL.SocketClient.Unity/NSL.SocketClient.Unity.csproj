<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
	  <TargetFramework>net6.0</TargetFramework>
	  <Configurations>Debug;Release;Unity;UnityDebug;</Configurations>
	  <Version>$(VersionSuffix)</Version>

	  <PublishRepositoryUrl>true</PublishRepositoryUrl>
	  <EmbedUntrackedSources>true</EmbedUntrackedSources>
	  <AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
	  <GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
    <Description>Библиотека реализующая совместимую логику для работы с Unity
ThreadHelper - компонент должен был закреплен как Singletone для вывода операций в освноной поток</Description>
	  
	  <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
  </PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Debug'">
		<PackageId>$(MSBuildProjectName)_Debug</PackageId>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='UnityDebug'">
		<TargetFramework>netstandard2.0</TargetFramework>
		<DefineConstants>DEBUG;TRACE</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Unity'">
		<TargetFramework>netstandard2.0</TargetFramework>
	</PropertyGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\Base\NSL.Cipher\NSL.Cipher.csproj" />
    <ProjectReference Include="..\..\Protocols\TCP\NSL.TCP.Client\NSL.TCP.Client.csproj" />
    <ProjectReference Include="..\NSL.SocketClient\NSL.SocketClient.csproj" />
  </ItemGroup>

  <ItemGroup>
    <Reference Include="UnityEngine">
      <HintPath>..\..\Reference\UnityEngine.dll</HintPath>
    </Reference>
  </ItemGroup>

</Project>
