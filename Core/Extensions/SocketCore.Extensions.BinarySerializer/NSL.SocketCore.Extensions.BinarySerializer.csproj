<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Configurations>Debug;Release;Unity;UnityDebug;</Configurations>

		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
		<GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
		
		<Authors>Relife87</Authors>
		<Version>$(VersionSuffix)</Version>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Debug'">
		<PackageId>$(MSBuildProjectName)_Debug</PackageId>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='UnityDebug'">
		<AssemblyName>Unity.$(MSBuildProjectName)</AssemblyName>
		<TargetFramework>netstandard2.0</TargetFramework>
		<DefineConstants>DEBUG;TRACE</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Unity'">
		<AssemblyName>Unity.$(MSBuildProjectName)</AssemblyName>
		<TargetFramework>netstandard2.0</TargetFramework>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\BinarySerializer\NSL.Extensions.BinarySerializer\NSL.Extensions.BinarySerializer.csproj" />
		<ProjectReference Include="..\..\NSL.SocketCore\NSL.SocketCore.csproj" />
	</ItemGroup>

	<ItemGroup Condition="'$(Configuration)'=='UnityDebug'">
	  <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
	</ItemGroup>

	<ItemGroup Condition="'$(Configuration)'=='Unity'">
	  <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
	</ItemGroup>

	<ItemGroup Condition="'$(Configuration)|$(Platform)'=='UnityDebug|AnyCPU'">
		<Reference Include="UnityEngine">
			<HintPath>..\UnityEngine.dll</HintPath>
			<CopyToOutputDirectory>Never</CopyToOutputDirectory>
		</Reference>
	</ItemGroup>

</Project>
