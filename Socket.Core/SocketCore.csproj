<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net5.0</TargetFramework>
    <Configurations>Debug;Release;Unity;UnityDebug;DebugStable</Configurations>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>
    
    <Version>$(VersionSuffix)</Version>
    <Description>Библиотека содержащая базовые классы для взаимодействия по сетевому протоколу TCP</Description>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>
    <EmbedUntrackedSources>true</EmbedUntrackedSources>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <PackageId>$(MSBuildProjectName)_Debug</PackageId>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='Unity|AnyCPU'">
    <TargetFramework>netstandard2.0</TargetFramework>
  </PropertyGroup>

  <!--<PropertyGroup Condition="'$(Configuration)'=='Debug'">
    <PackageId>$(AssemblyName).Develop</PackageId>
  </PropertyGroup>-->

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='UnityDebug|AnyCPU'">
    <TargetFramework>netstandard2.0</TargetFramework>
    <DefineConstants>DEBUG;TRACE</DefineConstants>
    <OutputPath>..\UnityDebug\</OutputPath>
  </PropertyGroup>
</Project>
