	</ItemGroup>
	
	<ItemGroup>
		<CompilerVisibleProperty Include="CodeRefactoring1_RelativeSharedPath" />
	</ItemGroup>
	
	<ItemGroup>
	  <EmbeddedResource Include="Templates\Shared\ItemModel.Client.cs" />
