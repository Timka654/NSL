<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<NSLProjectTypes>UnitySupport;Analyzer;AnalyzerCore</NSLProjectTypes>

		<TargetFramework>netstandard2.0</TargetFramework>
		<Configurations>Debug;Release;DebugExamples;Unity;UnityDebug</Configurations>
		<AllowUnsafeBlocks>true</AllowUnsafeBlocks>
		<Nullable>disable</Nullable>

		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
		<GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>

		<EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
		<IsRoslynComponent>true</IsRoslynComponent>

		<Version>$(VersionSuffix)</Version>
		<Authors>Relife87</Authors>
		<Description>-</Description>

		<IsPackable>false</IsPackable>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Debug'">
		<PackageId>$(MSBuildProjectName)_Debug</PackageId>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='UnityDebug'">
		<AssemblyName>Unity.$(MSBuildProjectName)</AssemblyName>
		<DefineConstants>DEBUG;TRACE</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Unity'">
		<AssemblyName>Unity.$(MSBuildProjectName)</AssemblyName>
	</PropertyGroup>
	<ItemGroup Condition="'$(Configuration)'=='Debug' Or '$(Configuration)'=='Release' Or '$(Configuration)'=='DebugExamples'">
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.13.0" PrivateAssets="all" />
	</ItemGroup>
	<ItemGroup Condition="'$(Configuration)'=='UnityDebug' Or '$(Configuration)'=='Unity'">
		<PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.3.1" PrivateAssets="all" />
	</ItemGroup>
	<ItemGroup>
		<PackageReference Include="Microsoft.Extensions.Primitives" Version="9.0.3" />
	</ItemGroup>

	<ItemGroup>
		<Compile Include="..\NSL.Generators.HttpEndPointGenerator.Shared\**\*.cs"
			  Exclude="..\NSL.Generators.HttpEndPointGenerator.Shared\**\bin\**;..\NSL.Generators.HttpEndPointGenerator.Shared\**\obj\**">
			<Link>NSL.Generators.HttpEndPointGenerator.Shared\%(RecursiveDir)%(FileName)%(Extension)</Link>
		</Compile>
	</ItemGroup>
	<ItemGroup>
		<Compile Include="..\..\NSL.Generators.Utils\**\*.cs"
			  Exclude="..\..\NSL.Generators.Utils\**\bin\**;..\..\NSL.Generators.Utils\**\obj\**">
			<Link>NSL.Generators.Utils\%(RecursiveDir)%(FileName)%(Extension)</Link>
		</Compile>
	</ItemGroup>

	<!--<ItemGroup>
		<ProjectReference Include="..\NSL.Generators.HttpEndPointGenerator.Shared\NSL.Generators.HttpEndPointGenerator.Shared.csproj" PrivateAssets="all" />
		<ProjectReference Include="..\..\NSL.Generators.Utils\NSL.Generators.Utils.csproj" PrivateAssets="all" />
	</ItemGroup>-->

</Project>
