<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<Configurations>Debug;Release;Unity;UnityDebug;</Configurations>
		<Version>$(VersionSuffix)</Version>

		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
		<GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
	</PropertyGroup>

	<ItemGroup>
		<ProjectReference Include="..\..\..\Core\NSL.SocketClient\NSL.SocketClient.csproj" />
		<ProjectReference Include="..\NSL.TCP\NSL.TCP.csproj" />
	</ItemGroup>

	<PropertyGroup Condition="'$(Configuration)'=='UnityDebug'">
		<TargetFramework>netstandard2.0</TargetFramework>
		
		<DefineConstants>DEBUG;TRACE</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Unity'">
		<TargetFramework>netstandard2.0</TargetFramework>
		
	</PropertyGroup>

</Project>
