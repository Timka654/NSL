<Project Sdk="Microsoft.NET.Sdk">

	<PropertyGroup>
		<TargetFramework>net6.0</TargetFramework>
		<OutputPath>..\package_build</OutputPath>
		<Configurations>Debug;Release;Unity;UnityDebug;</Configurations>
		<Version>$(VersionSuffix)</Version>

		<PublishRepositoryUrl>true</PublishRepositoryUrl>
		<EmbedUntrackedSources>true</EmbedUntrackedSources>
		<AutoGenerateBindingRedirects>true</AutoGenerateBindingRedirects>
		<GenerateBindingRedirectsOutputType>true</GenerateBindingRedirectsOutputType>
		
		<IsPackable>true</IsPackable>
	</PropertyGroup>
	
	<PropertyGroup Condition="'$(Configuration)'=='Debug'">
		<PackageId>$(MSBuildProjectName)_Debug</PackageId>
	</PropertyGroup>

	<ItemGroup>
	  <ProjectReference Include="..\Cipher(NET.Standard)\Cipher.csproj" />
	  <ProjectReference Include="..\Socket.Core\NSL.SocketCore.csproj" />
	</ItemGroup>

	<PropertyGroup Condition="'$(Configuration)'=='UnityDebug'">
		<TargetFramework>netstandard2.0</TargetFramework>
		<OutputPath>..\package_unity_build</OutputPath>
		<DefineConstants>DEBUG;TRACE</DefineConstants>
	</PropertyGroup>

	<PropertyGroup Condition="'$(Configuration)'=='Unity'">
		<TargetFramework>netstandard2.0</TargetFramework>
		<OutputPath>..\package_unity_build</OutputPath>
	</PropertyGroup>
</Project>
